@model IEnumerable<warehouse_asp.Models.Product>

<table class="table">
    <tr>
        <th>
            GROUP NAME
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name).ToString().ToUpper()
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price).ToString().ToUpper()
        </th>
        @if (ViewBag.IsEditableList) {
            <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Catalog.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price) $
            </td>
            @if (ViewBag.IsEditableList) {
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "glyphicon glyphicon-edit" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "glyphicon glyphicon-remove" })
                </td>
            }
        </tr>
    }

</table>